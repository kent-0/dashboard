{
  "extends": ["config:base"],
  "ignorePaths": ["^\\.(?!js|json|yml|yaml|toml)"],
  "packageRules": [
    {
      "updateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "monorepo": {
    "enabled": true,
    "prTitlePrefix": "chore(deps):"
  },
  "schedule": ["before 3am on the first day of the month"],
  "timezone": "UTC",
  "platform": "github",
  "rebaseDelay": 1,
  "semanticCommits": true,
  "semanticCommitScope": true,
  "semanticCommitMessage": "chore(release): {{category}}{{scope}}: bump {{package}} from {{oldVersion}} to {{newVersion}}"
}
